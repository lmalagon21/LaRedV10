<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registro_cliente">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido_a_lared"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Registrate en LaRed"
            android:layout_width="149dp"
            android:layout_height="22dp"
            android:id="@+id/labelconocercliente1"
            android:clickable="false" android:background="#FBFBFB"
            android:textColor="#009688"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="36dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/labelprimernombre" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Primer Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelprimernombre" android:textColor="#009688"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="92dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/primernombre_cliente"
            android:textColor="#009688"
            android:maxLength="15"
            app:layout_constraintStart_toStartOf="@+id/labelprimernombre"
            app:layout_constraintTop_toBottomOf="@+id/labelprimernombre"/>
    <TextView
            android:text="Segundo Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_segundonombre" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/primernombre_cliente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/segundonombre_cliente"
            android:textColor="#009688"
            android:maxLength="15"
            app:layout_constraintStart_toStartOf="@+id/label_segundonombre"
            app:layout_constraintTop_toBottomOf="@+id/label_segundonombre"/>
    <TextView
            android:text="Primer Apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_primerapellido" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/segundonombre_cliente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/primerapellido_cliente"
            android:textColor="#009688"
            android:maxLength="10"
            app:layout_constraintStart_toStartOf="@+id/label_primerapellido"
            app:layout_constraintTop_toBottomOf="@+id/label_primerapellido"/>
    <TextView
            android:text="Segundo Apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_segundoapellido" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/primerapellido_cliente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/segundoapellido_cliente"
            android:maxLength="10"
            android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_segundoapellido"
            app:layout_constraintTop_toBottomOf="@+id/label_segundoapellido"/>
    <Button
            android:text="Continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/continuar_regcliente" android:background="#FBFBFB"
            android:textColor="#009688"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelar_registrocliente1"
            android:background="#FBFBFB" android:textColor="#F44336"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="17dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/movil_clientecompleto"
            android:maxLength="10"
            android:textColor="#FF5722"
            app:layout_constraintStart_toStartOf="@+id/label_movilcliente"
            app:layout_constraintTop_toBottomOf="@+id/label_movilcliente"/>
    <TextView
            android:text="Número Móvil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_movilcliente" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/segundoapellido_cliente"/>
</androidx.constraintlayout.widget.ConstraintLayout>