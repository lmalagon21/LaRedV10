<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uso_app_negocio" android:id="@+id/foto_negocio">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eres parte de LaRed"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="@+id/image_negocio"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[12]"
            android:id="@+id/image_negocio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="122dp"
            android:layout_marginStart="122dp" app:layout_constraintTop_toBottomOf="@+id/estas_enred"
            android:layout_marginBottom="93dp" app:layout_constraintBottom_toTopOf="@+id/gestion_cargar_puntos"/>
    <Button
            android:text="Cargar Puntos a LaRed"
            android:layout_width="186dp"
            android:layout_height="0dp"
            android:id="@+id/gestion_cargar_puntos" android:textColor="#2196F3"
            android:background="#FBFBFB"
            app:layout_constraintTop_toBottomOf="@+id/image_negocio" android:layout_marginBottom="38dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/gestion_redimir_puntos"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="REDIMIR PUNTOS EN LaRed"
            android:layout_width="192dp"
            android:layout_height="0dp"
            android:id="@+id/gestion_redimir_puntos" android:textColor="#FFA73B"
            android:background="#FBFBFB"
            app:layout_constraintTop_toBottomOf="@+id/gestion_cargar_puntos" android:layout_marginBottom="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gestion_consultar_factura"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Consultar/Pagar Factura"
            android:layout_width="212dp"
            android:layout_height="0dp"
            android:id="@+id/gestion_consultar_factura"
            android:background="#FBFBFB" android:textColor="#009688"
            app:layout_constraintTop_toBottomOf="@+id/gestion_redimir_puntos" android:layout_marginBottom="195dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Tus clientes han acumulado en tu negocio:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_acumular_puntos" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="118dp"/>
    <TextView
            android:text="20000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/puntos_acumulados" android:textColor="#F44336"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/label_acumular_puntos" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>