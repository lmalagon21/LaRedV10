<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".redimir_puntos">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eres parte de LaRed"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[12]"
            android:id="@+id/image_negocio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
            app:layout_constraintTop_toBottomOf="@+id/estas_enred"/>
    <TextView
            android:text="Vamos a redimir puntos de tus clientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_redimir_puntos" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="83dp"
            app:layout_constraintTop_toBottomOf="@+id/image_negocio" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Número Móvil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_redimir_movil" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="47dp"
            app:layout_constraintTop_toBottomOf="@+id/label_redimir_puntos" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/movil_redimir"
            android:gravity="center" android:maxLength="10" android:textColor="#2196F3"
            app:layout_constraintStart_toStartOf="@+id/label_redimir_puntos" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/label_redimir_movil"/>
    <TextView
            android:text="Valor a Redimir"
            android:layout_width="101dp"
            android:layout_height="26dp"
            android:id="@+id/label_redimir_compra" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/movil_redimir" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/valor_redimir"
            android:gravity="center" android:textColor="#F44336"
            app:layout_constraintTop_toBottomOf="@+id/label_redimir_compra" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="@+id/movil_redimir"/>
    <Button
            android:text="Redimir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redimir_puntos" android:background="#FBFBFB"
            android:textColor="#FFC107" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>