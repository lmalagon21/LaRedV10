<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uso_app_cliente">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eres parte de LaRed"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginBottom="55dp" app:layout_constraintBottom_toTopOf="@+id/label_usuario"/>
    <TextView
            android:text="Hola!!"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:id="@+id/label_usuario" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/nombre_persona" android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp" app:layout_constraintTop_toBottomOf="@+id/estas_enred"
            app:layout_constraintBottom_toTopOf="@+id/nombre_persona"/>
    <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_persona" tools:text="Nombre_completo"
            android:textColor="#03A9F4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/label_usuario" android:layout_marginBottom="574dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>