<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uso_app_cliente">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eres parte de LaRed"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Hola Pepito del socorro Peréz!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msj_bienvenidacliente" android:textColor="#03A9F4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="89dp" android:layout_marginStart="16dp"
            android:layout_marginBottom="85dp" app:layout_constraintBottom_toTopOf="@+id/label_puntosacumulados"/>
    <TextView
            android:text="Tus Puntos!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_puntosacumulados" android:textColor="#009688"
            app:layout_constraintEnd_toEndOf="@+id/puntos_acumulados"
            app:layout_constraintBottom_toTopOf="@+id/puntos_acumulados"
            app:layout_constraintStart_toStartOf="@+id/msj_bienvenidacliente" android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp" android:layout_marginEnd="58dp" android:layout_marginRight="58dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:text="5000"
            android:ems="10"
            android:id="@+id/puntos_acumulados" android:textColor="#F44336" android:gravity="center"
            android:layout_marginTop="212dp"
            app:layout_constraintEnd_toStartOf="@+id/valor_puntosacumulados" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginEnd="1dp" android:layout_marginRight="1dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:text="$ 2.500"
            android:ems="10"
            android:id="@+id/valor_puntosacumulados" android:gravity="center" android:textColor="#F44336"
            app:layout_constraintTop_toBottomOf="@+id/label_valorpuntosacumulados"
            app:layout_constraintStart_toEndOf="@+id/puntos_acumulados" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/puntos_acumulados" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <Button
            android:text="Negocios Aliados"
            android:layout_width="147dp"
            android:layout_height="43dp"
            android:id="@+id/conocer_aliados" android:background="#FBFBFB"
            android:textColor="#9C27B0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="103dp" app:layout_constraintBottom_toTopOf="@+id/transferir_puntos"/>
    <Button
            android:text="Negocios en Promoción"
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:id="@+id/negocios_promocion" android:background="#FBFBFB"
            android:textColor="#FF9800"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/conocer_aliados" android:layout_marginBottom="27dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/transferir_puntos"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Transferir puntos"
            android:layout_width="159dp"
            android:layout_height="49dp"
            android:id="@+id/transferir_puntos" android:background="#FBFBFB"
            android:textColor="#3F51B5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="62dp" app:layout_constraintBottom_toTopOf="@+id/salir_delared"/>
    <Button
            android:text="Terminar Sesión en LaRed"
            android:layout_width="205dp"
            android:layout_height="0dp"
            android:id="@+id/salir_delared" android:background="#FBFBFB"
            android:textColor="#F44336"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Valor Puntos!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_valorpuntosacumulados"
            android:textColor="#009688"
            app:layout_constraintStart_toEndOf="@+id/msj_bienvenidacliente"
            app:layout_constraintEnd_toEndOf="@+id/valor_puntosacumulados"
            app:layout_constraintBottom_toTopOf="@+id/puntos_acumulados" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginEnd="47dp" android:layout_marginRight="47dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>