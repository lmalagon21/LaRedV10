<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registro_cliente2">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido_a_lared"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toTopOf="@+id/labelconocercliente1"
            android:visibility="invisible"/>
    <TextView
            android:text="Donde estás ubicado?"
            android:layout_width="149dp"
            android:layout_height="0dp"
            android:id="@+id/labelconocercliente1"
            android:clickable="false" android:background="#FBFBFB"
            android:textColor="#009688"
            app:layout_constraintTop_toBottomOf="@+id/estas_enred"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"/>
    <TextView
            android:text="País"
            android:layout_width="56dp"
            android:layout_height="20dp"
            android:id="@+id/label_paiscliente" android:textColor="#009688"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="144dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pais_cliente"
            android:textColor="#009688" app:layout_constraintStart_toStartOf="@+id/label_paiscliente"
            app:layout_constraintTop_toBottomOf="@+id/label_paiscliente"/>
    <TextView
            android:text="Ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_ciudadcliente" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/pais_cliente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ciudad_cliente" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_ciudadcliente"
            app:layout_constraintTop_toBottomOf="@+id/label_ciudadcliente"/>
    <TextView
            android:text="Barrio de Preferencia"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/label_barriocliente" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ciudad_cliente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/barrio_cliente" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_barriocliente"
            app:layout_constraintTop_toBottomOf="@+id/label_barriocliente"/>
    <CheckBox
            android:text="Deseo recibir notificaciones de promociones de los negocios aliados en mi barrio de preferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recibir_notificacionescliente"
            android:textColor="#009688" android:textColorHighlight="#FFEB3B"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="56dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/barrio_cliente"/>
    <Button
            android:text="Registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registrar_cliente" android:textColor="#009688"
            android:background="#FBFBFB" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.95"/>
    <Button
            android:text="Atrás"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/atras_finalcliente" android:background="#FBFBFB"
            android:textColor="#F44336" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>