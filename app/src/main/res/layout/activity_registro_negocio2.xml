<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registro_negocio2">
    <TextView
            android:text="Cuéntanos acerca de tu Negocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acercade" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="43dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tipo_docnegocio"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido_a_lared"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="Continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/continuar_reg_neg2" android:background="#FBFBFB"
            android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Tipo de Documento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tipo_docnegocio" android:textColor="#009688"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="136dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/nit"
            android:maxLength="10" android:textColor="#009688"
            app:layout_constraintTop_toTopOf="@+id/tipo_docnegocio"
            app:layout_constraintStart_toStartOf="@+id/tipo_docnegocio" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Número Móvil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_movil" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/numerodocnegocio"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/movil"
            android:maxLength="10" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_movil"
            app:layout_constraintTop_toBottomOf="@+id/label_movil"/>
    <TextView
            android:text="Correo Electrónico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_email" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/movil"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_email"
            app:layout_constraintTop_toBottomOf="@+id/label_email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numerodocnegocio" android:maxLength="12" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_numdocnegocio"
            app:layout_constraintTop_toBottomOf="@+id/label_numdocnegocio"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_pwd_negocio" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="23dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwd_negocio"
            android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_pwd_negocio"
            app:layout_constraintTop_toBottomOf="@+id/label_pwd_negocio" android:maxLength="15"/>
    <TextView
            android:text="Número de Documento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_numdocnegocio" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nit"/>

</androidx.constraintlayout.widget.ConstraintLayout>