            android:text="Eres Cliente?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recuperarpwd_escoger_cliente"
            android:textColor="#009688"
            app:layout_constraintTop_toBottomOf="@+id/recuperarpwd_respuesta1_cliente" android:layout_marginEnd="4dp"
