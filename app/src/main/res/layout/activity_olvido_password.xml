            android:ems="10"
            android:id="@+id/recuperarpwd_respuesta2_cliente" android:textColor="#FF9800"
            android:hint="Aplican mayúsculas" android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/label_recuperarpwd_respuesta2_cliente"
